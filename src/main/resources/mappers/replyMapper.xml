<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.ktehun.mapper.BoardMapper">
  	<insert id="create">
  		insert into test.tbl_reply(bno,replytext,replayer) values (#{bno} ,#{replytext},#{replayer})
  	</insert>
  	<select id="read">
  	
  	select * from test.tbl_reply where bno =#{bno} order by no desc 
  	</select>
  	<update id="update">
  		upadte test.tbl_reply set replytext=#{replytext}, upadtedate=now() where no=#{no}
  	</update>
  	<delete id="delete">
  		delete from test.tbl_reply where no = #[no]
  	</delete>
  </mapper>